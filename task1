import random

# Words from different categories with hints
words_with_hints = {
    "cricket": "ğŸ A popular outdoor sport with bat and ball",
    "apple": "ğŸ A red or green fruit",
    "tiger": "ğŸ… A big striped wild cat",
    "pakistan": "ğŸŒ A country in South Asia",
    "python": "ğŸ’» A popular programming language"
}

# Randomly choose a word and hint
word, hint = random.choice(list(words_with_hints.items()))
guessed_word = ["_"] * len(word)
attempts = 6
guessed_letters = []

print("ğŸ® Welcome to Hangman!")
print(f"Hint: {hint}")  # show hint
print("Guess the word:", " ".join(guessed_word))

# Main game loop
while attempts > 0 and "_" in guessed_word:
    guess = input("\nEnter a letter: ").lower()

    # Already guessed check
    if guess in guessed_letters:
        print("â— You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    # Correct guess
    if guess in word:
        print("âœ… Correct!")
        for i in range(len(word)):
            if word[i] == guess:
                guessed_word[i] = guess
    else:
        attempts -= 1
        print(f"âŒ Wrong! Attempts left: {attempts}")

    # Show progress + guessed letters
    print(" ".join(guessed_word))
    print("Guessed so far:", ", ".join(guessed_letters))

# Win/Lose result
if "_" not in guessed_word:
    print("\nğŸ‰ Congratulations! You guessed the word:", word)
else:
    print("\nğŸ’€ Game Over! The word was:", word)
